# API Configuration
VITE_APP_API=http://localhost:8000
VITE_APP_STRIPE=pk_test_your_stripe_public_key

# Google OAuth Configuration
# Para obtener tu Client ID: https://console.cloud.google.com/apis/credentials
# 1. Crear un proyecto en Google Cloud Console
# 2. Habilitar Google+ API
# 3. Crear credenciales OAuth 2.0
# 4. Agregar orígenes autorizados: http://localhost:5173, https://tu-dominio.com
# 5. Agregar URIs de redirección autorizados: http://localhost:5173/auth/google/callback
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_FB_PIXEL_ID=XXXXXXXXXX

# Feature Flags
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_ABANDONED_CART_RECOVERY=true

# Performance
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_IMAGE_OPTIMIZATION=true 